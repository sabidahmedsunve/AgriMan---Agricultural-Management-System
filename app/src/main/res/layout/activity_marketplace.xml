<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MarketPlacePage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_marketplace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/icon_back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:menu="@menu/marketplace_more_option">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/theamColor_1"
            android:text="AgriMan Marketplace"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/iv_marketplace_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_marketplacebanner"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_marketplace"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/marketPlace_recyclerviewAd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/card_marketplacead_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_marketplace_banner"
        app:layout_constraintStart_toStartOf="@+id/iv_marketplace_banner"
        app:layout_constraintTop_toBottomOf="@+id/iv_marketplace_banner" />

    <ProgressBar
        android:id="@+id/pg_marketPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/marketPlace_recyclerviewAd"
        app:layout_constraintEnd_toEndOf="@+id/marketPlace_recyclerviewAd"
        app:layout_constraintStart_toStartOf="@+id/marketPlace_recyclerviewAd"
        app:layout_constraintTop_toBottomOf="@+id/iv_marketplace_banner" />
</androidx.constraintlayout.widget.ConstraintLayout>