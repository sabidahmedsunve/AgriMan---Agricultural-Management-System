<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CreateNewAd">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_createNewAd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/icon_back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create new Ad"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="40dp" />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_createNewAd" />

    <EditText
        android:id="@+id/et_createNewAd_productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_alledittext"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_createNewAd_productName"
        app:layout_constraintTop_toBottomOf="@+id/et_createNewAd_productName" />

    <EditText
        android:id="@+id/et_createNewAd_phoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_alledittext"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:hint="+880 1xxx-xxxx"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/et_createNewAd_productName"
        app:layout_constraintStart_toStartOf="@+id/et_createNewAd_productName"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Product Price"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/et_createNewAd_phoneNumber" />

    <EditText
        android:id="@+id/et_createNewAd_productValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_alledittext"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="18dp"

        app:layout_constraintEnd_toEndOf="@+id/et_createNewAd_phoneNumber"
        app:layout_constraintStart_toStartOf="@+id/et_createNewAd_phoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Product Description"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/et_createNewAd_productValue" />

    <EditText
        android:id="@+id/et_createNewAd_Descriptio"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_alledittext"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="18dp"

        android:gravity="top|left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_createNewAd_productValue"
        app:layout_constraintStart_toStartOf="@+id/et_createNewAd_productValue"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Seller Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_createNewAd_Descriptio"
        app:layout_constraintTop_toBottomOf="@+id/et_createNewAd_Descriptio" />

    <EditText
        android:id="@+id/et_CreateNewAd_sellrName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_alledittext"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/et_createNewAd_Descriptio"
        app:layout_constraintStart_toStartOf="@+id/et_createNewAd_Descriptio"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/et_btnCreateNewAd"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_allbtn"
        android:paddingTop="10dp"
        android:text="Create Ad"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_CreateNewAd_sellrName"
        app:layout_constraintStart_toStartOf="@+id/et_CreateNewAd_sellrName"
        app:layout_constraintTop_toBottomOf="@+id/et_CreateNewAd_sellrName" />

    <ProgressBar
        android:id="@+id/pg_CreateNewAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/et_createNewAd_Descriptio"
        app:layout_constraintStart_toStartOf="@+id/et_createNewAd_Descriptio"
        app:layout_constraintTop_toBottomOf="@+id/et_createNewAd_Descriptio" />

</androidx.constraintlayout.widget.ConstraintLayout>